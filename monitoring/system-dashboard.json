{
  "dashboard": {
    "title": "TTQuant 系统状态",
    "tags": ["ttquant", "system"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "服务运行状态",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 24, "h": 4},
        "targets": [
          {
            "expr": "up",
            "legendFormat": "{{job}} - {{instance}}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "textMode": "value_and_name",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN"},
              {"type": "value", "value": "1", "text": "UP"}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "CPU 使用率",
        "type": "graph",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU 使用率",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "使用率", "max": 100, "min": 0},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "内存使用",
        "type": "graph",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
            "legendFormat": "内存使用率",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "使用率", "max": 100, "min": 0},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "磁盘使用率",
        "type": "gauge",
        "gridPos": {"x": 0, "y": 12, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "(node_filesystem_size_bytes{mountpoint=\"/\"} - node_filesystem_avail_bytes{mountpoint=\"/\"}) / node_filesystem_size_bytes{mountpoint=\"/\"} * 100",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 85, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "网络流量",
        "type": "graph",
        "gridPos": {"x": 8, "y": 12, "w": 16, "h": 6},
        "targets": [
          {
            "expr": "irate(node_network_receive_bytes_total{device!~\"lo|veth.*\"}[5m])",
            "legendFormat": "接收 - {{device}}",
            "refId": "A"
          },
          {
            "expr": "irate(node_network_transmit_bytes_total{device!~\"lo|veth.*\"}[5m])",
            "legendFormat": "发送 - {{device}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "Bps", "label": "字节/秒"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "数据库连接数",
        "type": "graph",
        "gridPos": {"x": 0, "y": 18, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "pg_stat_activity_count",
            "legendFormat": "活跃连接",
            "refId": "A"
          },
          {
            "expr": "pg_settings_max_connections",
            "legendFormat": "最大连接数",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "连接数"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "数据库大小",
        "type": "stat",
        "gridPos": {"x": 12, "y": 18, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "pg_database_size_bytes{datname=\"ttquant_trading\"}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      },
      {
        "id": 8,
        "title": "数据库事务数",
        "type": "stat",
        "gridPos": {"x": 18, "y": 18, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "rate(pg_stat_database_xact_commit{datname=\"ttquant_trading\"}[5m])",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "textMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "decimals": 2
          }
        }
      },
      {
        "id": 9,
        "title": "容器内存使用",
        "type": "graph",
        "gridPos": {"x": 0, "y": 26, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name=~\"ttquant.*\"}",
            "legendFormat": "{{name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "内存"},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "容器 CPU 使用",
        "type": "graph",
        "gridPos": {"x": 12, "y": 26, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=~\"ttquant.*\"}[5m]) * 100",
            "legendFormat": "{{name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU %"},
          {"format": "short"}
        ]
      }
    ]
  },
  "overwrite": true
}
